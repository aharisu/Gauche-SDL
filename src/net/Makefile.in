# General info
SHELL       = @SHELL@
prefix      = @prefix@
exec_prefix = @exec_prefix@
bindir      = @bindir@
libdir      = @libdir@
datadir     = @datadir@
datarootdir = @datarootdir@
srcdir      = @srcdir@
VPATH       = $(srcdir)

# These may be overridden by make invocators
DESTDIR        =
GOSH           = "@GOSH@"
GAUCHE_CONFIG  = "@GAUCHE_CONFIG@"
GAUCHE_PACKAGE = "@GAUCHE_PACKAGE@"
INSTALL        = "@GAUCHE_INSTALL@" -C

SCRIPTDIR = "@SCRIPTDIR@"
OUTDIR = "@OUTDIR@"
GENSTUB = "@GENSTUB@"

# Other parameters
SOEXT  = @SOEXT@
OBJEXT = @OBJEXT@
EXEEXT = @EXEEXT@
GSDL_LDFLAGS = @GSDL_LDFLAGS@
LOCAL_PATHS = "@LOCAL_PATHS@"

SDL_LIBS = @SDL_LIBS@ -lSDL_net
SDL_CFLAGS = $(filter -I%, @SDL_CFLAGS@)

gauche_SDL_LIBS = @GSDL_LIBS@

# Module-specific stuff
PACKAGE = @PACKAGE@

ARCHFILES = gauche-sdl-net.$(SOEXT) gauche-sdl-netext.$(SOEXT)
HEADERS   = 

TARGET    = $(ARCHFILES)
GENERATED = *.gen.* *lib.c $(ARCHFILES)
CONFIG_GENERATED = Makefile

GAUCHE_PKGINCDIR  = "$(DESTDIR)@GAUCHE_PKGINCDIR@"
GAUCHE_PKGLIBDIR  = "$(DESTDIR)@GAUCHE_PKGLIBDIR@"
GAUCHE_PKGARCHDIR = "$(DESTDIR)@GAUCHE_PKGARCHDIR@"

gauche_sdl_net_SRCS = gauche-sdl-net.c \
											sdl-netlib.c	\
											net_type.gen.c

gauche_sdl_netext_SRCS = gauche-sdl-netext.c \
												 sdl-netextlib.c

sdl_STUB_TYPE_HDRS = ../sdl_type.gen.stub.header \
										 ../macro.stub.header \
										 net_type.gen.stub.header

netext_STUB_TYPE_HDRS = ../sdl_type.gen.stub.header \
												../macro.stub.header

all : $(TARGET)

#generate stub -> c file
.SUFFIXES:.stub .c

.stub.c:
	$(GOSH) -I$(SCRIPTDIR) $(GENSTUB) $<

sdl-netlib.c: $(sdl_STUB_TYPE_HDRS)

#generate type file
net_type.gen.c net_type.gen.h net_type.gen.stub.header: net_type.scm
	$(GOSH) -I$(SCRIPTDIR) net_type.scm

#compile net
gauche-sdl-net.$(SOEXT): $(gauche_sdl_net_SRCS) ../gauche-sdl.$(SOEXT)
	$(GAUCHE_PACKAGE) compile --cflags="$(SDL_CFLAGS)" --local=$(LOCAL_PATHS) --verbose --ldflags="$(GSDL_LDFLAGS)" --libs="$(SDL_LIBS) $(gauche_SDL_LIBS)" gauche-sdl-net $(gauche_sdl_net_SRCS)


sdl-netextlib.stub: $(netext_STUB_TYPE_HDRS)

#compile net-ext
gauche-sdl-netext.$(SOEXT): $(gauche_sdl_netext_SRCS) ../gauche-sdl.$(SOEXT)
	$(GAUCHE_PACKAGE) compile --cflags="$(SDL_CFLAGS)" --local=$(LOCAL_PATHS) --verbose --ldflags="$(GSDL_LDFLAGS)" --libs="$(SDL_LIBS) $(gauche_SDL_LIBS)" gauche-sdl-netext $(gauche_sdl_netext_SRCS)

test : all
	@rm -f test.log
	$(GOSH) -I. -I$(srcdir) $(srcdir)/test.scm > test.log

install :
	$(INSTALL) -m 444 -T $(GAUCHE_PKGINCDIR) $(HEADERS)
	$(INSTALL) -m 555 -T $(GAUCHE_PKGARCHDIR) $(ARCHFILES)

uninstall :
	$(INSTALL) -U $(GAUCHE_PKGINCDIR) $(HEADERS)
	$(INSTALL) -U $(GAUCHE_PKGARCHDIR) $(ARCHFILES)

clean :
	$(GAUCHE_PACKAGE) compile --clean gauche_sdl-net $(gauche_sdl_net_SRCS)
	rm -rf core $(TARGET) $(GENERATED) *~ test.log so_locations

realclean : clean
	rm -rf $(CONFIG_GENERATED)

maintainer-clean : clean
	rm -rf $(CONFIG_GENERATED)

collect :
	@if test "$(HEADERS)" != ""; then (cp -p -u $(HEADERS) $(OUTDIR)/header/); fi
	@if test "$(ARCHFILES)" != ""; then (cp -p -u $(ARCHFILES) $(OUTDIR)/dll/); fi

